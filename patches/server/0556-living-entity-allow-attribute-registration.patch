+    // Paper start
+    @Override
+    public void registerAttribute(final Attribute attribute) {
+        Preconditions.checkArgument(attribute != null, "attribute");
+        this.handle.registerAttribute(CraftAttribute.bukkitToMinecraft(attribute));
