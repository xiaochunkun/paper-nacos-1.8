+package io.papermc.paper.plugin.lifecycle.event;
+
+import io.papermc.paper.plugin.configuration.PluginMeta;
+import org.bukkit.plugin.Plugin;
+import org.jetbrains.annotations.ApiStatus;
+import org.jetbrains.annotations.NotNull;
+
+/**
+ * Implemented by types which are considered owners
+ * of registered handlers for lifecycle events. Generally
+ * the types which implement this interface also provide
+ * a {@link LifecycleEventManager} where you can register
+ * event handlers.
+ */
+@ApiStatus.Experimental
+@ApiStatus.NonExtendable
+public interface LifecycleEventOwner {
+
+    /**
+     * Get the plugin meta for this plugin.
+     *
+     * @return the plugin meta
+     */
+    @NotNull PluginMeta getPluginMeta();
+
+    /**
+     * Internal interface to hide creating JavaPlugin lifecycle managers.
+     *
+     * @hidden
+     */
+    @ApiStatus.Internal
+    interface PluginOwner extends LifecycleEventOwner {
+
+        /**
+         * @hidden
+         * @return true if currently allowing lifecycle registration
+         */
+        @ApiStatus.Internal
+        boolean allowingLifecycleEventRegistration();
+
+        default @NotNull LifecycleEventManager<Plugin> getLifecycleManager() {
+            return LifecycleEventTypeProvider.PROVIDER.createPluginLifecycleManager(this);
+        }
+    }
+}
