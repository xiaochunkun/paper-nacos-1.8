+    @Override
+    org.bukkit.inventory.Inventory getInventory();
+
+    /**
+     * @return snapshot inventory
+     * @see Container#getSnapshotInventory()
+     */
+    @NotNull
+    org.bukkit.inventory.Inventory getSnapshotInventory();
+    // Paper end
 }
